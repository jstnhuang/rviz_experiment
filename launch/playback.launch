<launch>
  <arg name="user" />
  <arg name="condition" />
  <arg name="sim" default="false" />

  <node pkg="rosbag" type="play" name="rosbag_playback_exp"
    args="/home/jstn/Dropbox/experiment_data/$(arg user)_$(arg condition).bag" />

  <arg if="$(arg sim)" name="rviz_config"
    value="$(find rviz_experiment)/config/playback-sim.rviz" />
  <arg unless="$(arg sim)" name="rviz_config"
    value="$(find rviz_experiment)/config/playback.rviz" />
  <include file="$(find
    pr2_interactive_manipulation_frontend)/launch/pr2_interactive_manipulation_desktop.launch">
    <arg name="rviz_config_file_base" value="$(arg rviz_config)" />
  </include>
</launch>
